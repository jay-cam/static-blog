---
// Props our component will accept:
export interface Props {
  title: string;
  date: string;
  excerpt: string;
  url: string;
  image?: { src: string; alt: string };
}
const { title, date, excerpt, url, image } = Astro.props;
---
<article class="post-card">
  {image && (
    <a href={url}>
      <img src={image.src} alt={image.alt} class="post-card__image" />
    </a>
  )}
  <div class="post-card__body">
    <h3 class="post-card__title"><a href={url}>{title}</a></h3>
    <time class="post-card__date">{date}</time>
    <p class="post-card__excerpt">{excerpt}</p>
    <a href={url} class="post-card__readmore">Read more â†’</a>
  </div>
</article>

<style lang="css">
  .post-card {
    border: 1px solid #ddd;
    border-radius: 0.5rem;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }
  .post-card__image {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  .post-card__body {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .post-card__title {
    margin: 0;
    font-size: 1.25rem;
  }
  .post-card__date {
    font-size: 0.85rem;
    color: #555;
  }
  .post-card__excerpt {
    flex: 1;
  }
  .post-card__readmore {
    font-weight: bold;
    color: var(--clr-primary);
    text-decoration: none;
  }
  .post-card__readmore:hover {
    text-decoration: underline;
  }
</style>
